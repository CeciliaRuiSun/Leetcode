class Solution {
    public int longestConsecutive(int[] nums) {
        if(nums == null || nums.length == 0) return 0;
        
        Set<Integer> set = new HashSet<>();
        for(int n: nums){
            set.add(n);
        }
        
        int ret = 0;
        for(int n: nums){
            if(!set.contains(n-1)){
                int curCnt = 1;
                while(set.contains(n + 1)){
                    curCnt ++;
                    n = n + 1;
                }
                ret = Math.max(ret, curCnt);
            }
        }
        
        return ret;
    }
}
