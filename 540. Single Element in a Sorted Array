
class Solution {
    public int singleNonDuplicate(int[] nums) {
        // single number's index can only be even
        // if mid is odd, compare it with its next number
        // if mid is even, compare it with its previous number
        
        int left = 0, right = nums.length-1;
        
        while(left < right){
            int mid = left + (right - left)/2;
            if(mid % 2 == 0){
                if(nums[mid] == nums[mid + 1]){
                    left = mid + 2;
                } else{
                    right = mid;
                }
            } else{
                if(nums[mid] == nums[mid - 1]){
                    left = mid + 1;
                } else{
                    right = mid;
                }
            }
        }
        
        return nums[left];
    }
}



