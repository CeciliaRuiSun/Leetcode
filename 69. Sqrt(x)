// solution 1
class Solution {
    public int mySqrt(int x) {
        int lo = 0, hi = x;
        if(x == 0 || x == 1){
            return x;
        }
        while(lo <= hi){
            int mid = lo + (hi - lo)/2;
            if(mid == x/mid || (mid < x/mid && (mid + 1) > x/(mid + 1))){
                return mid;
            } else if(mid < x/mid){
                lo = mid + 1;
            } else{
                hi = mid - 1;
            }
        }
        
        return lo;
    }
}

// solution 2
class Solution {
    public int mySqrt(int x) {
        
        int left = 1;
        int right = x;
        
        while(left <= right){
            int mid = left + (right - left)/2;
            if(mid == x/mid){
                return mid;
            } else if(mid < x/mid){
                left = mid + 1;
            } else {
                right = mid - 1;
            }
        }
        
    
        return right;
    }
}
